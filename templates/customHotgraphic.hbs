<div class="customHotgraphic-inner component-inner">
    {{> component this}}
    <div class="customHotgraphic-widget component-widget clearfix {{#unless _isSubmitted}}before-submit{{/unless}} {{#unless _isEnabled}} disabled {{#if _isComplete}} complete submitted show-user-answer {{/if}} {{#if _isCorrect}}correct{{/if}}  {{/unless}}">
        <img class="customHotgraphic-background-image" src="{{#if _desktop}}{{_backgroundImage.large}}{{else}}{{_backgroundImage.small}}{{/if}}">
        {{#each _items}}
        <div id="{{../_id}}" class="customHotgraphic-item component-item-text-color component-item {{#unless ../_isEnabled}} {{#if _isCorrect}}correct{{else}}incorrect{{/if}} {{/unless}} item-{{@index}} {{#if _isSelected}}selected{{/if}}" data-id="{{@index}}" style="top:{{_top}}%; left:{{_left}}%;" style="top:{{_mobileTop}}%; left:{{_mobileLeft}}%;" aria-labelledby="{{../_id}}-{{@index}}-aria" >
            <div class="customHotgraphic-graphic-pin">
                <div class="customHotgraphic-graphic-pin-icon component-item-color icon icon-pin">
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
